{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "build with resgen",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateResourceDesigner=true"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "dotnet",
      "args": [
        "clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/RA2.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/RA2.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/RA2.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish_debug_randomart", // A new, descriptive label
      "command": "dotnet",
      "type": "process",
      "args": [
          "publish",
          "${workspaceFolder}/RandomArt/RandomArt.csproj", // Target the specific project
          "--configuration", "Debug",                       // Ensure it's a debug build
          "--runtime", "win-x64",                           // Explicitly set runtime for self-contained
          "--self-contained", "true",                       // Explicitly make it self-contained
          "--output", "${workspaceFolder}/RandomArt/bin/Debug/net9.0-windows7.0/win-x64/", // **Crucial: Exact output path**
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile",
      "group": {
          "kind": "build" // No "isDefault: true" here, we'll call it explicitly
      }
    }
  ]
  }